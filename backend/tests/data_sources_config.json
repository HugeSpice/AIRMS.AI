{
  "data_sources": {
    "production_db": {
      "name": "production_db",
      "type": "postgresql",
      "host": "localhost",
      "port": 5432,
      "database": "airms_production",
      "username": "airms_user",
      "password": "your_secure_password_here",
      "enable_data_sanitization": true,
      "enable_risk_assessment": true,
      "allowed_tables": ["users", "orders", "products", "categories"],
      "blocked_tables": ["passwords", "api_keys", "secrets", "tokens"]
    },
    "analytics_db": {
      "name": "analytics_db",
      "type": "mysql",
      "host": "localhost",
      "port": 3306,
      "database": "airms_analytics",
      "username": "analytics_user",
      "password": "your_analytics_password_here",
      "enable_data_sanitization": true,
      "enable_risk_assessment": true,
      "allowed_tables": ["metrics", "logs", "reports", "events"],
      "blocked_tables": ["raw_logs", "debug_data"]
    },
    "external_api": {
      "name": "external_api",
      "type": "rest_api",
      "base_url": "https://api.example.com",
      "api_key": "your_api_key_here",
      "headers": {
        "Authorization": "Bearer your_api_key_here",
        "Content-Type": "application/json"
      },
      "enable_data_sanitization": true,
      "enable_risk_assessment": true,
      "max_query_time": 30
    },
    "supabase_db": {
      "name": "supabase_db",
      "type": "supabase",
      "host": "your-project.supabase.co",
      "port": 5432,
      "database": "postgres",
      "username": "postgres",
      "password": "your_supabase_password_here",
      "enable_data_sanitization": true,
      "enable_risk_assessment": true,
      "allowed_tables": ["public_users", "public_orders", "public_products"],
      "blocked_tables": ["private_data", "admin_tables"]
    }
  },
  "security_settings": {
    "default_processing_mode": "strict",
    "enable_connection_pooling": true,
    "max_connections_per_source": 10,
    "connection_timeout": 30,
    "query_timeout": 60,
    "enable_query_logging": true,
    "enable_risk_logging": true,
    "block_high_risk_queries": true,
    "sanitize_all_responses": true
  },
  "monitoring": {
    "enable_health_checks": true,
    "health_check_interval": 300,
    "enable_performance_monitoring": true,
    "enable_error_tracking": true,
    "log_level": "INFO"
  }
}
